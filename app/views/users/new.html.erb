  <fieldset>
  <legend>Enter User Details</legend>
  <div>
    <%= f.label :name  %><br />
    <%= f.text_field :name , :size =>40 %>
  </div>
  <div>
    <%= f.label :user_password , 'Password' %><br />
    <%= f.text_field :password , :size =>40 %>
  </div>
  <div>
    <%= f.label :user_password_confirmation ,'Confirm' %><br />
    <%= f.text_field :password_confirmation , :siza =>40 %>
  </div>
  <div>
    <%= f.submit 'Create' %>
  </div>
  </fieldset>
<% end %>

