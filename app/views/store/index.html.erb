<h1>产品目录</h1>

<% for product in @products  -%>
 <div class="entry">
 	<%= link_to image_tag(product.image_url),:action=>"addtocard", :method=>:post %>
 	<h3><%=h product.title %></h3>
 	<%= product.description %>
 	<div class="price-line">
 		<span class="price"> <%= number_to_currency(product.price,:unit => "RMB:") %></span>
 		<% form_remote_tag :url=>{:action =>'add_to_cart', :id =>product}  do %>
 		<%= submit_tag "加入购物车" %>
 		<% end %> 		
 	</div>
 </div>
 <% end %>
 		

